<Window x:Class="WPFColors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFColors"
        mc:Ignorable="d"
        Title="Colors" Height="450" Width="500"
        KeyDown="Window_KeyDown" Closing="Window_Closing">
    <Grid>
        <StackPanel Margin="10">
            <Rectangle x:Name="rectangle"
                       Stroke="Black"
                       Height="280" />

            <Slider x:Name="sliderR"
                    Minimum="0" Maximum="255"
                    Margin="0 10"
                    ValueChanged="UpdateColor" />

            <Slider x:Name="sliderG"
                    Minimum="0" Maximum="255"
                    Margin="0 10"
                    ValueChanged="UpdateColor" />

            <Slider x:Name="sliderB"
                    Minimum="0" Maximum="255" 
                    Margin="0 10"
                    ValueChanged="UpdateColor" />
        </StackPanel>
    </Grid>
</Window>
